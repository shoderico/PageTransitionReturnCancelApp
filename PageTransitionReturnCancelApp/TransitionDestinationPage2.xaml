<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageTransitionReturnCancelApp.TransitionDestinationPage2"
             Title="TransitionDestinationPage2">
    <VerticalStackLayout>
        <!-- Welcome message -->
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <!-- Button to set a result and return -->
        <Button Text="Set Result" Clicked="OnSetResultClicked" />
        <!-- Button to cancel and return -->
        <Button Text="Cancel" Clicked="OnCancelClicked" />
    </VerticalStackLayout>
</ContentPage>